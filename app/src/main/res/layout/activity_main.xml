<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_image"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn_browse"
        android:layout_width="130dp"
        android:layout_height="42dp"
        android:layout_marginStart="58dp"
        android:layout_marginTop="94dp"
        android:layout_marginEnd="45dp"
        android:layout_marginBottom="63dp"
        android:background="@drawable/button_transparent_background"
        android:text="@string/select_file"
        android:textColor="@color/black"
        app:cornerRadius="5dp"
        app:layout_constraintBottom_toTopOf="@+id/tvFileName"
        app:layout_constraintEnd_toStartOf="@+id/iv_key"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/tvFileName"
        android:layout_width="292dp"
        android:layout_height="69dp"
        android:layout_marginStart="54dp"
        android:layout_marginTop="199dp"
        android:layout_marginEnd="65dp"
        android:layout_marginBottom="463dp"
        android:hint="@string/file_path"
        android:padding="5dp"
        android:textSize="17dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edKey"
        android:layout_width="292dp"
        android:layout_height="52dp"
        android:layout_marginStart="58dp"
        android:layout_marginTop="280dp"
        android:layout_marginEnd="69dp"
        android:layout_marginBottom="399dp"
        android:hint="@string/password"
        android:inputType="textPassword"
        android:lines="2"
        android:textSize="16dp"
        android:backgroundTint="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/btn_encrypt"
        android:layout_width="118dp"
        android:layout_height="53dp"
        android:layout_marginStart="58dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="53dp"
        android:layout_marginBottom="320dp"
        android:backgroundTint="@color/black"
        android:contentDescription="@string/encrypt"
        android:src="@drawable/baseline_encrypt_15"
        app:cornerRadius="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btn_decrypt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edKey" />

    <ImageButton
        android:id="@+id/btn_decrypt"
        android:layout_width="118dp"
        android:layout_height="53dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="64dp"
        android:layout_marginBottom="320dp"
        android:backgroundTint="@color/black"
        android:contentDescription="@string/decrypt"
        android:src="@drawable/baseline_decrypt_15"
        app:cornerRadius="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edKey" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_key"
        android:layout_width="157dp"
        android:layout_height="210dp"
        android:layout_marginStart="229dp"
        android:layout_marginTop="31dp"
        android:layout_marginEnd="36dp"
        android:layout_marginBottom="499dp"
        android:src="@drawable/key"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.222" />

</androidx.constraintlayout.widget.ConstraintLayout>